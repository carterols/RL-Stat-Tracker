<header>
    <title>RL Stat Tracker</title>
    {{> header}}
</header>

<main class="content">
    <div class="user-input">
        <label for="platforms">Platform</label>
        <select id="platforms">
            <option selected value="STEAM">Steam</option>
            <option value="PS4">PS4</option>
            <option value="XB1">Xbox One</option>
        </select>
    </div>
    <div class="user-input">
        <input id="username" type="text">
    </div>
    <div class="user-input">
        <input id="submitButton" type="button" value="Search">
    </div>    
</main>